{
  "name": "fontcase-explorer",
  "description": "fontcase-explorer",
  "version": "0.0.2",
  "author": "thinkholic",
  "license": "MIT",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fontcase/fontcase-explorer.git"
  },
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "prod": "build --em.main=build/electron.js",
    "release": "GH_TOKEN=<put the token here> build --em.main=build/electron.js --publish=always",
    "preprod": "npm run build",
    "prerelease": "npm run build"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "@blueprintjs/core": "^3.4.0",
    "cross-env": "^5.1.3",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.14",
    "electron-updater": "^2.19.1",
    "node-notifier": "^5.2.1",
    "os": "^0.1.1",
    "path": "^0.12.7",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "request": "^2.88.0",
    "styled-components": "^3.4.5",
    "sudo-prompt": "^8.2.0",
    "update-electron-app": "^1.3.0"
  },
  "devDependencies": {
    "concurrently": "3.5.1",
    "electron": "^2.0.7",
    "electron-builder": "^19.54.0",
    "eslint": "^4.19.1 || ^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.0",
    "prettier": "^1.14.2",
    "prettier-eslint": "^8.8.2",
    "react-scripts": "^1.1.4",
    "wait-on": "^2.1.0"
  },
  "build": {
    "appId": "io.fontcase.explorer",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraFiles": [
      "src/lib/**"
    ],
    "publish": {
      "provider": "github"
    }
  }
}
